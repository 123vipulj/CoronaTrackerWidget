<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5EDEDED"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:id="@+id/title_statewise"
        android:background="#0CFBFBFB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.2"
        android:orientation="horizontal">
        <TextView
            android:text="@string/statewise_covid19"
            android:textAlignment="center"
            android:padding="15dp"
            android:fontFamily="@font/archia"
            android:textStyle="bold"
            android:paddingStart="50dp"
            android:paddingEnd="10dp"
            android:layout_weight="1.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/refresh_data"
            android:layout_weight="0.1"
            android:background="@drawable/ic_refresh"
            android:layout_width="40dp"
            android:layout_marginEnd="5dp"
            android:layout_height="35dp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/stateWiseList"
        android:layout_below="@id/title_statewise"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>